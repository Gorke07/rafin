{
  "name": "rafin",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "db:generate": "turbo run db:generate --filter=@rafin/db",
    "db:migrate": "turbo run db:migrate --filter=@rafin/db",
    "db:push": "turbo run db:push --filter=@rafin/db",
    "db:studio": "turbo run db:studio --filter=@rafin/db",
    "db:reset": "turbo run db:reset --filter=@rafin/db",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "knip": "knip",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "knip": "^5.40.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  }
}
